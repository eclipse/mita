	// we range check
	// XPECT errors --> "Array index out of bounds: length = 5" at "10"
	x1 = foo2[10];
	// XPECT errors --> "Array index out of bounds: length = 5" at "10"
	foo2[10] = 10;
	
	// arrays can be copied
	var a = new array<uint16>(size = 10);
