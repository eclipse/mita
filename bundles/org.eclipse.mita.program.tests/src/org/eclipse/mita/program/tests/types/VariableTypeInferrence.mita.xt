}

function variableInferenceGenerated() {
    //XPECT inferredType --> optional<int32>
    var xo: int32? = 1;
    //XPECT inferredType --> optional<int32>
    var yo = xo;
    
    //XPECT inferredType --> xint8
    var xs = 42;
    //XPECT inferredType --> string
    var ys = `${xs}`;
    
    //XPECT inferredType --> array<xint8>
    var xa = [1,2,3,4];
    //XPECT inferredType --> array<xint8>
    var ya = xa;
}

