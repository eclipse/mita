	var x: int8 = 10;
	//XPECT inferredType --> int16
	var z: int16 = (x * 3) + 10;
}

function variableInferenceOperationCall() : void {
	//XPECT inferredType --> array<int8>
	var array : array<int8> = new array<int8>(size = 10);
	//XPECT inferredType --> xint8  
	var x = 10;   
	testIt(x, 10);         
	//XPECT inferredType --> xint8
	var y = 10;
	testIt(param2 = y, param1 = 10);   
} 
 
